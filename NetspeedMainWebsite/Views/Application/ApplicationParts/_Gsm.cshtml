@model NetspeedMainWebsite.Models.ViewModel.ApplicationViewModel

<!--begin::Form-->
<div class="d-flex justify-content-center flex-row-fluid ">
    <form class="pb-5 w-100 w-md-450px w-lg-500px" novalidate="novalidate" id="kt_form">
        <!--begin: Wizard Step 1-->
        <div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">
            <!--begin::Title-->
            <div class="pb-10 pb-lg-15">
                <h3 class="font-weight-bolder text-info font-size-h2">Netspeed Ev İnterneti, Online Başvurusuna Hoş Geldiniz!</h3><hr class="my-4">
                <div class="text-dark-50 font-weight font-size-h5 mt-5">Başvurunuza devam edebilmek ve sizinle başvuru sonrası iletişime geçebilmemiz için lütfen iletişim numaranızı yazınız.</div>
                <div class="text-dark font-weight font-size-h8 mt-5">Ardından Cep Telefonunuza doğrulama kodu içeren bir sms göndereceğiz.</div>
            </div>
            <!--begin::Title-->
            <!--begin::Form Group-->
            <div class="form-group">
                <label class="font-size-h6 font-weight-bolder m-2 text-dark">Lütfen GSM Numaranızı Yazınız</label>
                @Html.EditorFor(m => m.PhoneNumber, new { @class = "form-control h-auto p-4 border-0 rounded-lg font-weight-bolder text-info font-size-h6" })
                @*<input type="text" class="form-control h-auto p-4 border-0 rounded-lg font-weight-bolder text-info font-size-h6" name="gsmno" id="kt_inputmask_3" placeholder="GSM Numaranız" im-insert="true" />*@
            </div>
            <!--end::Form Group-->
            <!--end: Wizard Step 1-->

        </div>
    </form>
</div>

