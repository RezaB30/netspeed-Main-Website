@model NetspeedMainWebsite.Models.ViewModel.ApplicationViewModel
@using NetspeedMainWebsite.Models.ViewModel



@Html.AntiForgeryToken()

<div class="form-group" id="otherFieldGroupDiv">
    <div class="alert alert-custom alert-outline-primary fade show mb-5" role="alert">
        <div class="alert-icon"><i class="animate__animated animate__flash flaticon-exclamation-2"></i></div>
        <div class="alert-text">
            Eğer Abonemizseniz, <a class="font-weight-bolder text-info" href="https://online.netspeed.com.tr/">Netspeed Online işlem Merkezine </a>
            Giriş Yaparak Yeni Abonelik Oluşturmalısınız.
        </div>
