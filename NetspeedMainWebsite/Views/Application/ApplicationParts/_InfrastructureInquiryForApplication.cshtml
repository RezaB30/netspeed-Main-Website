            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"><i class="ki ki-close"></i></span>
            </button>
        </div>*@
    </div>
</div>

<div class="text-danger" style="font-size:2em">
    @*@TempData["message"]*@
</div>
<!--begin::Title-->
<div class="text-right mb-lg-4 mb-15 mr-xxl-10">

</div>
<!--end::Title-->
<!--begin::Form-->
<div class="d-flex justify-content-center flex-row-fluid ">
</div>

<!--begin::Form Group-->

<div class="separator separator-dashed my-3"></div>
<div class="pb-10 pb-lg-5">
    <h3 class="font-weight-bolder text-dark-50 font-size-h2">Adres Bilgileriniz</h3>
    <hr class="my-4">
</div>

<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">İl</label>
            @Html.DropDownListFor(m => m.ProvinceId, new SelectList(ViewBag.ProvinceList, "Value", "Text"), "SECINIZ", new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf" })
            <div class="text-danger"> @Html.ValidationMessageFor(m => m.ProvinceId)</div>
            <span class="text-danger required-error">Şehir Seçiniz</span>
        </div>
    </div>
    <!--end::Form Group-->
    <!--begin::Form Group-->

    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">İlçe</label>
            @Html.DropDownListFor(m => m.DistrictId, new SelectList(ViewBag.DistrictList, "Value", "Text"), "SECINIZ", new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf" })
            <div class="text-danger"> @Html.ValidationMessageFor(m => m.DistrictId)</div>
            <span class="text-danger required-error">İlçe Seçiniz</span>
        </div>
        <!--end::Form Group-->
    </div>
</div>

<!--begin::Form Group-->
<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Semt</label>
            @Html.DropDownListFor(m => m.RegionId, new SelectList(ViewBag.RegionList, "Value", "Text"), "SECINIZ", new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf" })
            <div class="text-danger"> @Html.ValidationMessageFor(m => m.RegionId)</div>
            <span class="text-danger required-error">Semt Seçiniz</span>
        </div>
    </div>
    <!--end::Form Group-->
    <!--begin::Form Group-->

    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Mahalle</label>
            @Html.DropDownListFor(m => m.NeighborhoodId, new SelectList(ViewBag.NeighborhoodList, "Value", "Text"), "SECINIZ", new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf" })
            <div class="text-danger"> @Html.ValidationMessageFor(m => m.NeighborhoodId)</div>
            <span class="text-danger required-error">Mahalle Seçiniz</span>
        </div>
        <!--end::Form Group-->
    </div>
</div>

<!--begin::Form Group-->
<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Sokak/Cadde</label>
            @Html.DropDownListFor(m => m.StreetId, new SelectList(ViewBag.StreetList, "Value", "Text"), "SECINIZ", new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m.StreetId)
            </div>
            <span class="text-danger required-error">Sokak veya Cadde Seçiniz</span>
        </div>
    </div>
    <!--end::Form Group-->
    <!--begin::Form Group-->

    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Apt./Bina No</label>
            @Html.DropDownListFor(m => m.BuildingId, new SelectList(ViewBag.BuildingList, "Value", "Text"), "SECINIZ", new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf" })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m.BuildingId)
            </div>
            <span class="text-danger required-error">Bina No Seçiniz</span>
        </div>
        <!--end::Form Group-->
    </div>
</div>

<!--begin::Form Group-->
<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Kapı No</label>
            @Html.DropDownListFor(m => m.ApartmentId, new SelectList(ViewBag.ApartmentList, "Value", "Text"), "SECINIZ", new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf" })

            <div class="text-danger">
                @Html.ValidationMessageFor(m => m.ApartmentId)
            </div>
            <span class="text-danger required-error">Kapı No Seçiniz</span>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Kat No</label>
            @Html.EditorFor(m => m.Floor, new
            {
                htmlAttributes = new
                {
                    @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf",
                    @placeholder = "Kat No",
           @maxlength = 3
                }
})
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m.Floor)
            </div>
            <span class="text-danger required-error">Kat No Seçiniz</span>
        </div>
    </div>
</div>
<!--end::Form Group-->
<!--begin::Form Group-->
<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Posta Kodu</label>
            @Html.EditorFor(m => m.PostalCode, new { htmlAttributes = new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6 validationControlInf", @placeholder = "Posta Kodu", @maxlength = 5 } })
            <div class="text-danger">
                @Html.ValidationMessageFor(m => m.PostalCode)
            </div>
            <span class="text-danger required-error">Posta Kodu Zorunludur</span>
        </div>
    </div>
</div>

