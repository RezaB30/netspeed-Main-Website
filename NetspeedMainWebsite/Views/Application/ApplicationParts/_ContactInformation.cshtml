@model NetspeedMainWebsite.Models.ViewModel.ApplicationViewModel


<!--begin::Title-->
<div class="pb-10 pb-lg-15">
    <h3 class="font-weight-bolder text-dark font-size-h2">İletişim Bilgileriniz</h3><hr class="my-4">
</div>
<!--begin::Title-->
<!--begin::Form Group-->
<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Adınız</label>
            @Html.EditorFor(m => m.FirstName, new
            {
                htmlAttributes = new
                {
                    @class = "form-control h-auto p-4 border-0 rounded-lg font-size-h6 validationControl",
                    @placeholder = "Adınız",
                    @maxlength = 50,
                    @autocomplete = "off"
                }
            })


            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
            <span class="text-danger required-error">Adınızı Yazınız</span>
        </div>
    </div>
    <!--end::Form Group-->
    <!--begin::Form Group-->
    <div class="col-lg-6 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Soyadınız</label>
            @Html.EditorFor(m => m.LastName, new
            {
                htmlAttributes = new
                {
                    @class = "form-control h-auto p-4 border-0 rounded-lg font-size-h6 validationControl",
                    @placeholder = "Soyadınız",
                    @maxlength = 50,
                    @autocomplete = "off"
                }
            })

            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
            <span class="text-danger required-error">Soyadınızı Yazınız</span>
        </div>
    </div>
    <!--end::Form Group-->
    <!--begin::Form Group-->
    <div class="col-lg-12 col-md-6">
        <div class="form-group is-required">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">E-Posta Adresiniz</label>
            @Html.EditorFor(m => m.EmailAddress, new
            {
                htmlAttributes = new
                {
                    @class = "form-control h-auto p-4 border-0 rounded-lg font-size-h6 validationControl",
                    @placeholder = "E-Posta Adresi",
                    @maxlength = 100,
                    @autocomplete = "off"
                }
            })


            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.EmailAddress)
            </div>
            <span class="text-danger required-error">E-Posta Gerekli</span>
        </div>
        <div class="text-muted font-size-h8 m-2">Lütfen geçerli bir E-Posta adres yazınız. Bilgilerinizi bu e-posta adresinize göndereceğiz.</div>
        <!--end::Form Group-->
    </div>
</div>

