                        @Html.EditorFor(m => m.SerialNo, new { htmlAttributes = new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6", @placeholder = "Seri No" } })
                    </div>
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.SerialNo)
                    </div>
                    @Html.HiddenFor(m => m.SerialNo)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="form-group">
                    <label class="font-size-h6 font-weight-bolder m-2 text-dark">Doğum Günü</label>
                    @*@Html.EditorFor(m => m.DateOfIssue, new { htmlAttributes = new { @class = "datepicker form-control h-auto p-3 border-0 rounded-lg font-size-h6", @placeholder = "Gün.Ay.Yıl" } })*@
                    @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "datepicker", @placeholder = "Doğum Günü" } })
                </div>
