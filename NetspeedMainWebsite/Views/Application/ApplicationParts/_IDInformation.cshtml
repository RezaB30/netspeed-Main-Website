                    @Html.ValidationMessageFor(model => model.BirthDate)
                </div>
                @Html.HiddenFor(m => m.BirthDate)
            </div>
            <div class="col-lg-6 col-md-6">
                <label class="font-size-h6 font-weight-bolder m-2 text-dark">Cinsiyet</label>
                @Html.DropDownListFor(m => m.Sex, Model.SexList, "SEÇİNİZ", new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6" })
            </div>
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Sex)
            </div>
        </div>
        @Html.HiddenFor(m => m.Sex)
