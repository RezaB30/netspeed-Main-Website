@model NetspeedMainWebsite.Models.ViewModel.ApplicationViewModel


<!--begin: Wizard Step 5-->
<div class="pb-5" data-wizard-type="step-content">
    <!--begin::Title-->
    <div class="pb-10 pb-lg-8">
        <h3 class="font-weight-bolder text-dark font-size-h2">Tarife Tercihi</h3><hr class="my-4">
        <div class="text-dark-50 font-weight font-size-h5 mt-5">
            Adresinizde desteklenen altyapıya göre aşağıdaki tarifelerden seçim yapabilirsiniz.
        </div>
    </div>
    <!--end::Title-->


    <div class="row">
        <div class="col-xl-12 ml-2">
            <!--begin::Stats Widget 4-->
            <div class="card card-custom gutter-b" style="background:#ffffff box-shadow:-webkit-box-shadow: -10px 68px 106px -16px rgba(0,0,0,0.37);
                                -moz-box-shadow: -13px 68px 106px -16px rgba(0,0,0,0.37);
                                box-shadow: 1px 4px 4px 0px rgb(0 0 0 / 14%)">
                <!--begin::Body-->
                <div class="card-body d-flex align-items-center py-0 mt-6">
                    <div class="d-flex flex-column flex-grow-1 py-2 py-lg-0">

                        @*@foreach (var item in Model)
                            {*@

                        <label class="option option option-plain">
                            <span class="option-control">
                                <span class="radio radio-info radio-lg mb-8 ">
                                    @* @Html.RadioButtonFor(modelItem=>item.TariffPreference,"Tariff")*@
                                    @*@Html.RadioButtonFor(modelItem => item., "x")*@
                                    <input type="radio" name="tariff" value="1">
                                    <span>
                                    </span>
                                </span>
                            </span>

                            <span class="option-label">
                                <span class="option-head">
                                    <span class="option-title font-size-h6 font-weight-bolder m-1 text-dark">Speed Pro 75</span>
                                    <span class="font-size-h6 font-weight-bolder m-1 text-info ">94 TL</span>
                                </span>
                                <span class="text-dark-50 font-weight font-size-h6 mt5 option-body">75 Mbps'e Kadar</span>
                            </span>
                        </label>
                    </div>
                    <!--end::Body-->
                </div>
            </div>
        </div>
        <!--end::Stats Widget 4-->
    </div>
    <br>
    <!--end::Stats Widget 4-->
    <!--end::Radio list-->

    <div class="pb-10 pb-lg-8">
        <h3 class="font-weight-bolder text-dark-50 font-size-h2">Ürün ve Hizmetler</h3><hr class="my-4">
        <!--begin::Form Group-->

        <div class="form-group">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Modem İstiyor musunuz?</label>
            @* @Html.DropDownListFor(m => m.Modem, Model.ModemList, new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6" })*@
            <select name="modem" class="form-control h-auto p-3 border-0 rounded-lg font-size-h6">
                <option value="" selected="selected">Hayır</option>
                <option value="">Zyxel Modem 200TL(4 Taksit)</option>
                <option value="">Zyxel Modem 200TL (1 Taksit)</option>
            </select>
        </div>




        <div class="form-group">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Statik IP</label>
            @* @Html.DropDownListFor(m => m.StaticIp,Model.StaticIpList ,new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6" })*@
            <select name="statikip" class="form-control h-auto p-3 border-0 rounded-lg font-size-h6">
                <option value="no" selected="selected">Hayır</option>
                <option value="yes">İstiyorum (Her Ay 15TL)</option>
            </select>
        </div>
        <br>

        <!--begin::Title-->
        <div class="pb-15 pb-lg-4">
            <h3 class="font-weight-bolder text-dark-50 font-size-h2">Varsa Referans Kodu</h3><hr class="my-4">
        </div>
        <!--begin::Title-->
        <div class="form-group">
            <label class="font-size-h6 font-weight-bolder m-2 text-dark">Referans Kodunu Yazınız</label>

            @* @Html.EditorFor(m=>m., new { @class = "form-control h-auto p-3 border-0 rounded-lg font-size-h6" })*@
            @*<input type="text" class="form-control h-auto p-4 border-0 rounded-lg font-size-h6" placeholder="Referans Kodu" name="referans" im-insert="true" value="" />*@
        </div>
        <!--begin::Form Group-->

    </div>

</div>

