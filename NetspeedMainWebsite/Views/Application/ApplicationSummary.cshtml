    <script type="text/javascript">
        $(document).ready(function () {
            $('#checkBtn').click(function () {
                checked = $("input[type=checkbox]:checked").length;

                if (checked != 2) {
                    //alert("Abonelik Sözleşmesini Okudum ve Kişisel Verilerimin İşlenmesine İzin Veriyorum Alanını İşaretlemeniz Gerekmektedir.");
                    swal({
                        title: '',
                        text: 'Abonelik Sözleşmesini Okudum ve Kişisel Verilerimin İşlenmesine İzin Veriyorum Alanını İşaretlemeniz Gerekmektedir.',
                        icon: 'error',
                        button: 'Tamam',
                    })
                    return false;
                }

                swal({
                    title: "",
                    text: "Herşey Tamam!, Başvurunuzu Onaylıyor musunuz?",
                    icon: "success",
                    buttons: ["Onaylıyorum","İptal"]

                })
                    .then((willDelete) => {
                        if (willDelete) {
                            swal("Form Gönderimi İptal Edildi", {
                                icon: "error",
                                button: 'Tamam'
                            });

                        } else {
                            //swal("Başvurunuz Alınmıştır", {
