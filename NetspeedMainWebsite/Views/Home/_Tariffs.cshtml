@model IEnumerable<NetspeedMainWebsite.Models.ViewModel.TariffsViewModel>

<div class="pb-10 pb-lg-8">
    <h3 class="font-weight-bolder text-dark font-size-h2">Tarife Tercihi</h3><hr class="my-4">
    <!--availability-->
    <div class="alert alert-custom fade show my-8 mb-8" style="background-color: rgb(255 248 225)" role="alert">
        <div class="alert-icon "><i class="fas fa-info-circle text-warning"></i></div>
        <p class="my-2 font-weight font-weight-bolder font-size-h4 alert-text">Adresinizde Desteklenen Hız</p>
        <p class="my-2 font-weight-bolder text-warning font-weight font-size-h1">
            @if (Model != null)
            {
                @Html.DisplayFor(m => m.FirstOrDefault().DefaultSpeed)
            }
        </p>
    </div>
    <!---->
    <div class="text-dark-50 font-weight font-size-h5 mt-5">
        Adresinizde desteklenen altyapıya göre aşağıdaki tarifelerden seçim yapabilirsiniz.
    </div>
</div>
<!--end::Title-->
<!--Tariffs-->
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-12 ml-2">
            <!--begin::Stats Widget 4-->
            <div class="card card-custom gutter-b" style="background:#ffffff; box-shadow:-webkit-box-shadow: -10px 68px 106px -16px rgba(0,0,0,0.37);-moz-box-shadow: -13px 68px 106px -16px rgba(0,0,0,0.37);box-shadow: 1px 4px 4px 0px rgb(0 0 0 / 14%)">
                <!--begin::Body-->
                <div class="card-body d-flex align-items-center py-0 mt-6">
                    <div class="d-flex flex-column flex-grow-1 py-2 py-lg-0">
                        <label class="option option option-plain">
                            <span class="option-control">
                                <span class="radio radio-info radio-lg mb-8 ">
                                    <input type="radio" name="tariff" value="@Html.DisplayFor(m=>item.TariffID)">
                                    <span hidden id="tariff-generic-info-@Html.DisplayFor(m=>item.TariffID)">@Html.DisplayFor(m => item.DisplayName) - @Html.DisplayFor(m => item.Price) TL</span>
                                    <span>
                                    </span>
                                </span>
                            </span>
                            <span class="option-label">
                                <span class="option-head">
                                    <span class="option-title font-size-h6 font-weight-bolder m-1 text-dark">@Html.DisplayFor(m => item.DisplayName)</span>
                                    <span class="font-size-h6 font-weight-bolder m-1 text-info ">@Html.DisplayFor(m => item.Price) TL</span>
                                </span>
                                <span class="text-dark-50 font-weight font-size-h6 mt5 option-body">@Html.DisplayFor(m => item.Speed)</span>
                            </span>
                        </label>
                    </div>
                    <!--end::Body-->
                </div>
            </div>
        </div>
    }
</div>