@model NetspeedMainWebsite.Models.ViewModel.PaymentBillViewModel
@using NetspeedMainWebsite.Models.ViewModel

@{
    ViewBag.Title = "Fatura Sorgulama ve Ödeme";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
            async defer>
    </script>

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

}

<div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
    <!--begin::Info-->
    <!--begin::Page Heading-->
    <div class="d-flex align-items-baseline flex-wrap my-5 mr-5">

    </div>
    <!--end::Toolbar-->
</div>

<!--end::Subheader-->
<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom">
            <!--begin::Card Body-->
            <div class="card-body p-0">
                <!--begin::Wizard 5-->
                <div class="wizard wizard-5 d-flex flex-column flex-lg-row flex-row-fluid" id="kt_wizard">
                    <!--begin::Aside-->
                    <div class="wizard-aside bg-white d-flex flex-column flex-row-auto w-100 w-lg-300px w-xl-400px w-xxl-450px">
                        <!--begin::Aside Top-->
                        <div class="d-flex flex-column-fluid flex-column px-xxl-20 px-10">
                            <!--begin: Wizard Nav-->
                            <div class="wizard-nav d-flex d-flex justify-content-center pt-10 pt-lg-15 pb-8">
                                <!--begin::Wizard Steps-->
                                <div class="wizard-steps">
                                    <!--begin::Wizard Step 1 Nav-->
                                    <div class="wizard-step">
                                        <div class="wizard-wrapper">
                                            <div class="wizard-icon">
                                                <i class="wizard-check ki ki-check"></i>
                                                <span class="wizard-number"><i class="fas fa-credit-card font-size-h2 text-info"></i></span>
                                            </div>
                                            <div class="wizard-label">
                                                <h3 class="wizard-title font-weight font-size-h4">Fatura Sorgulama ve Ödeme</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Wizard Step 1 Nav-->
                                    <!--begin::Wizard Step 2 Nav-->
                                    <div class="wizard-step">
                                        <div class="wizard-wrapper">
                                            <div class="wizard-icon">
                                                <i class="wizard-check ki ki-check"></i>
                                                <span class="wizard-number"><i class="fas fa-info font-size-h6 text-info"></i></span>
                                            </div>
                                            <div class="wizard-label">
                                                <h3 class="wizard-title font-weight text-dark-50 font-size-h6">Faturanızı sorgulayabilir, ister kredi kartı ister banka kartınızla komisyonsuz olarak ödeme yapabilirsiniz.</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--end::Wizard Steps-->
                            </div>
                            <!--end: Wizard Nav-->
                            <div class="d-flex flex-row-auto bgi-no-repeat bgi-position-bottom bgi-position-center bgi-size-contain pt-15 pt-lg-10 h-250px" style="background-image: url(../../Content/media/svg/cred3868.svg)"></div><br>
                        </div>
                    </div>
                    <!--begin::Aside-->
                    <!--begin::Content-->
                    <div class="d-flex flex-column flex-row-fluid py-15 px-5 px-lg-10 ">
                        <!--begin::Title-->
                        <div class="text-right mb-lg-4 mb-15 mr-xxl-10">

                        </div>
                        <!--end::Title-->
                        <!--begin::Form-->
                        @using (Html.BeginForm("PaymentBillAndResult", "ClientPayment", FormMethod.Post, new { @class = "pb-5 w-100 w-md-550px w-lg-600px", id = "kt_form2" }))

                        {
                            @Html.AntiForgeryToken()
                            <div class="d-flex justify-content-center flex-row-fluid ">
                                <!--begin: Wizard Step 1-->
                                <!--begin::Title-->
                                <div class="pb-10 pb-lg-15">
                                    <h3 class="font-weight-bolder text-info font-size-h2">Faturanızı Sorgulayın ve Kolayca Ödeyin</h3>
                                    <hr class="my-8">
                                    <div class="login-form login-signin">
                                        <!--begin::Form-->
                                        <div class="form fv-plugins-bootstrap fv-plugins-framework" novalidate="novalidate" id="kt_login_signin_form">
                                            <!--begin::Title-->
                                            <div class="pb-13 pt-lg-0 pt-5">
                                                <span class="text-dark-50 font-weight font-size-h5 mt-5">
                                                    T.C. Kimlik No / Hizmet Numarası ve GSM numarası bilgilerinizi ilgili alanlara giriniz.
                                                </span>
                                            </div>
                                            <!--begin::Title-->
                                            <!--begin::Form group-->
                                            <div class="form-group fv-plugins-icon-container">
                                                <div class="text-danger">
                                                    @TempData["message"]
                                                </div>
                                                <label class="font-size-h6 font-weight-bolder text-dark">TC. Kimlik NO veya Müşteri No</label>
                                                @* <input class="form-control form-control-solid h-auto py-4 px-6 rounded-lg" placeholder="TC. Kimlik No veya Müşteri No" type="text" name="ClientInfo" maxlength="11" autocomplete="off">*@
                                                @Html.EditorFor(m => m.ClientInfo, new { htmlAttributes = new { @class = "form-control form-control-solid h-auto p-4 border-0 rounded-lg font-size-h6", name = "ClientInfo", placeholder = "TC. Kimlik No veya Müşteri No", @autocomplete = "off", @maxlength = 11 } })

                                                <div class="fv-plugins-message-container">
                                                    <div class="text-danger">
                                                        @Html.ValidationMessageFor(m => m.ClientInfo)
                                                    </div>
                                                </div>
                                            </div>
                                            <!--end::Form group-->
                                            <!--begin::Form group-->
                                            <div class="form-group fv-plugins-icon-container">
                                                <div class="d-flex justify-content-between mt-n5">
                                                    <label class="font-size-h6 font-weight-bolder text-dark pt-5">GSM Numarası</label>
                                                </div>
                                                @* <input class="form-control form-control-solid h-auto py-4 px-6 rounded-lg kt_inputmask_3" type="text" id="kt_inputmask_3" placeholder="GSM Numaranız" im-insert="true" name="PhoneNumber" autocomplete="off">*@
                                                @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control form-control-solid h-auto p-4 border-0 rounded-lg font-size-h6", placeholder = "GSM Numaranız", name = "PhoneNumber", id = "kt_inputmask_3", @autocomplete = "off" } })

                                                <div class="fv-plugins-message-container">
                                                    <div class="text-danger">
                                                        @Html.ValidationMessageFor(m => m.PhoneNumber)
                                                    </div>
                                                </div>
                                            </div>


                                            @*<div class="g-recaptcha" data-sitekey="6LemlQwaAAAAAFqlAuPzuuBF-gF0HrNBeelSS2xJ"></div>*@
                                           
                                            <div class="g-recaptcha" data-sitekey= @ViewBag.clientKey></div>


                                            <div class="text-danger">
                                                @TempData["CaptchaMessage"]
                                            </div>
                                            <!--end::Form group-->
                                            <!--begin::Action-->
                                            <div class="pb-lg-0 pb-5">

                                                <button type="submit" class="btn btn-primary font-weight-bold mr-2">Fatura Borcumu Sorgula</button>
                                                <!--end::Action-->
                                                @*<input type="hidden">*@
                                            </div>
                                            <hr class="my-8">
                                            <div class="d-flex align-items-center">
                                                <p class="text-dark-50 font-weight-bold my-8">Ödemelerinizi kolay ve güvenli bir şekilde yapabilmenizi sağlayan yeni nesil ödeme sistemi ile her seferinde kredi kartı bilgilerinizi paylaşmaya gerek kalmadan çok kolay, hızlı ve güvenli bir şekilde Netspeed evde internet faturalarınızı ödeyebilir veya otomatik olarak ödenmesini sağlayabilirsiniz. </p>
                                            </div>
                                            <p><a href="https://online.netspeed.com.tr" class="text-primary font-weight-bold my-8 text-hover-warning ">Faturanıza otomatik ödeme vermek için tıklayınız.</a></p>

                                        </div>
                                        </div>
                                </div>
                            </div>
                        }
                        <!--end::Form-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{

    <script>
        $(function () {
            $('#kt_inputmask_3').inputmask({ "mask": "(999)-999-9999", 'autoUnmask': true, 'removeMaskOnSubmit': true });
        });
    </script>


}