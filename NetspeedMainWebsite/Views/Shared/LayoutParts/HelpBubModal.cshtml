@{ var callMe = TempData["CallMeModel"] as NetspeedMainWebsite.Models.ViewModel.CallMeViewModel ?? new NetspeedMainWebsite.Models.ViewModel.CallMeViewModel(); }

<!-- Modal-->

<div id="callMeModal">
    <div class="modal fade" id="exampleModal" tabindex="-0" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                @using (Html.BeginForm("CallMe", null, FormMethod.Post, new { @class = "form-group", id = "myModal" }))
                {
                    @Html.Hidden("actionName", ViewContext.RouteData.Values["action"])
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery) 

                    <div class="modal-header" style="background:#290b63">


                        <i class="fa fas fa-headphones-alt font-size-h2 text-white"></i>
                        <h5 class="modal-title text-white" id="exampleModalLabel">Biz Sizi Arayalım!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <i aria-hidden="true" class="text-white font-size-h6 ki ki-close"></i>
                        </button>
                    </div>
                    <div style="width: 35em; border: solid #e4e6ef; padding: 3em; margin: 1.5em; border-radius: 3%;" id="success-part">
                        <div style="text-align:center; font-size:2em; color:#8950FC">
                            @TempData["callMessages"]
                        </div>
                    </div>
                    <div id="help-bubble-part">
                        <div class="modal-body bg-secondary">
                            <div class="form-group fv-plugins-icon-container">
                                @Html.EditorFor(model => callMe.FullName, new { htmlAttributes = new { id = "FullName", @class = "form-control h-auto py-4 px-6 border-1 rounded-lg font-size-h6", placeholder = "Adı Soyadı", @autocomplete = "off", @maxlength = 50 } })

                                <div class="fv-plugins-message-container">
                                    <div class="text-danger">

                                        @(callMe?.FullNameValidationMessage)
                                        @if (callMe != null)
                                        {
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="form-group fv-plugins-icon-container">
                                @Html.EditorFor(model => callMe.PhoneNumber, new
                           {
                               name = "PhoneNumber",

                               htmlAttributes = new
                               {
                                   id = "kt_inputmask_3",
                                   @class = "form-control h-auto py-4 px-6 border-1 rounded-lg font-size-h6",

                                   @autocomplete = "off",
                                   placeholder = "GSM Numaranız"
                               }
                           })

                                <div class="fv-plugins-message-container">
                                    <div class="text-danger">
                                        @(callMe?.PhoneNumberValidationMessage)
                                    </div>
                                </div>
                                <div class="row m-2"><span class="form-text text-info">Lütfen size ulaşabileceğimiz GSM numaranızı yazınız.</span></div>
                            </div>
                            <div class="footer col-sm-0 d-flex align-items-center justify-content-sm-end">

                                <button type="button" class="btn btn-warning text-white font-weight-bold px-12 m-2" data-dismiss="modal">İptal</button>
                                <button type="submit" class="btn btn-info font-weight-bold px-12 m-2" id="confirm">Beni Arayın</button>
                            </div>


                        </div>
                        <div class="modal-footer bg-secondary">
                            <p>
                                <small>
                                    <span>Başvurunuz esnasında paylaşacağınız GSM numarası, Ad-Soyadı, hizmet almak istediğiniz adreste mevcut altyapıya uygun Netspeed ürün ve kampanyaları hakkında tarafınıza bilgi verilebilmesi, tarafınızla iletişime geçilebilmesi ve size doğru şekilde hitap edilebilmesi amaçlarıyla istenmektedir. Bu bilgiler Netspeed İnternet AŞ tarafından işlenecek ve belirtilen amaçlar haricinde kullanılmayacaktır. Kişisel Verilerin Korunması Kanunu kapsamında sahip olduğunuz haklarınız ve detaylar için </span>
                                    <a href="/About/Kvkk" target="_blank" class=" text-danger">Kişisel veri aydınlatma metni</a>
                                </small>
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script>
    if ("@TempData["callMessages"]" != "" || "@TempData["CallMeModel"]"!="") {
            $('.fade').modal('show');
        }
</script>

<script>
    $(function () {
        $('#kt_inputmask_3').inputmask({ "mask": "(999)-999-9999", 'autoUnmask': true, 'removeMaskOnSubmit': true });
    });
</script>

<script>
    $(function () {
        $("#FullName").inputmask({ regex: "[a-zA-Z- ]*" });
